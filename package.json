{
  "name": "digi-monorepo",
  "private": true,
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx,json}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx,json}\" --cache",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.8.9"
  }
}
