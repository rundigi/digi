{
  "name": "@digi/bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "devv": "bun run --env-file=../../.env --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "deploy-commands": "bun run --env-file=../../.env src/commands/index.ts --deploy",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@digi/db": "workspace:*",
    "@digi/redis": "workspace:*",
    "@digi/shared": "workspace:*",
    "discord.js": "^14.16.3",
    "drizzle-orm": "^0.45.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@digi/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "typescript": "^5.8.2"
  }
}
